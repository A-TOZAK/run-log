<body>

    <div class="header-area">
        <div id="timeDisplay">00:00:00.00</div>
        <h1 id="statusText">待機中</h1>
    </div>

    <div class="list-area" id="listArea">
        <table class="record-table">
            <thead>
                <tr>
                    <th class="rank-col">順位</th>
                    <th class="time-col">タイム</th>
                    <th class="action-col">修正</th>
                </tr>
            </thead>
            <tbody id="recordsBody">
                </tbody>
        </table>
        <div id="emptyMsg" class="empty-msg">
            スタートボタンを押して計測開始。<br>ゴール時に「記録」ボタンを押してください。
        </div>
    </div>

    <div class="control-area">
        <button id="btnRecord" onclick="recordTime()" disabled>
            記 録
        </button>

        <div class="sub-controls">
            <button id="btnStart" class="sub-btn" onclick="startTimer()">スタート</button>
            <button id="btnStop" class="sub-btn" onclick="stopTimer()">ストップ</button>
            <button id="btnReset" class="sub-btn" onclick="resetTimer()">リセット</button>
            <button id="btnCopy" class="sub-btn" onclick="copyToClipboard()">コピー</button>
        </div>
    </div>

    <script>
        let startTime = 0;
        let elapsedTime = 0;
        let timerInterval = null;
        let isRunning = false;
        let records = []; // { rank: 1, timeStr: "...", ms: 1234 }

        // 要素取得
        const timeDisplay = document.getElementById('timeDisplay');
        const statusText = document.getElementById('statusText');
        const btnRecord = document.getElementById('btnRecord');
        const btnStart = document.getElementById('btnStart');
        const btnStop = document.getElementById('btnStop');
        const btnReset = document.getElementById('btnReset');
        const recordsBody = document.getElementById('recordsBody');
        const emptyMsg = document.getElementById('emptyMsg');

        // 起動時にデータ復元
        window.onload = function() {
            const savedData = localStorage.getItem('simple_run_records');
            if (savedData) {
                records = JSON.parse(savedData);
                renderTable();
            }
        };

        // 時間フォーマット
        function formatTime(ms) {
            let date = new Date(ms);
            let m = String(date.getUTCMinutes()).padStart(2, '0');
            let s = String(date.getUTCSeconds()).padStart(2, '0');
            let msStr = String(Math.floor(date.getUTCMilliseconds() / 10)).padStart(2, '0');
            return `${m}:${s}.${msStr}`;
        }

        // スタート
        function startTimer() {
            if (isRunning) return;
            startTime = Date.now() - elapsedTime;
            timerInterval = setInterval(() => {
                elapsedTime = Date.now() - startTime;
                timeDisplay.textContent = formatTime(elapsedTime);
            }, 10);
            
            isRunning = true;
            statusText.textContent = "計測中...";
            statusText.style.color = "#28a745";
            
            // ボタン表示切り替え
            btnStart.style.display = "none";
            btnStop.style.display = "block";
            btnReset.style.display = "none";
            btnRecord.disabled = false;
        }

        // ストップ
        function stopTimer() {
            if (!isRunning) return;
            clearInterval(timerInterval);
            isRunning = false;
            statusText.textContent = "停止中";
            statusText.style.color = "#dc3545";

            btnStart.style.display = "block";
            btnStart.textContent = "再開";
            btnStop.style.display = "none";
            btnReset.style.display = "block";
            btnRecord.disabled = true;
        }

        // リセット
        function resetTimer() {
            if (confirm("タイマーと記録をリセットしますか？\n（スプレッドシートへのコピーを忘れずに！）")) {
                clearInterval(timerInterval);
                isRunning = false;
                elapsedTime = 0;
                timeDisplay.textContent = "00:00:00.00";
                statusText.textContent = "待機中";
                statusText.style.color = "#6c757d";

                btnStart.textContent = "スタート";
                btnStart.style.display = "block";
                btnStop.style.display = "none";
                btnReset.style.display = "none";
                btnRecord.disabled = true;

                // 記録もクリア
                records = [];
                saveAndRender();
            }
        }

        // 記録（タップで追加）
        function recordTime() {
            const currentMs = elapsedTime;
            const timeStr = formatTime(currentMs);
            const rank = records.length + 1;

            records.push({
                id: Date.now(),
                rank: rank,
                timeStr: timeStr,
                ms: currentMs
            });

            // 自動スクロール（最新が下に追加されるため）
            setTimeout(() => {
                const listArea = document.getElementById('listArea');
                listArea.scrollTop = listArea.scrollHeight;
            }, 0);

            saveAndRender();
        }

        // 削除（誤タップ対応）
        function deleteRecord(id) {
            if (confirm("この記録（1行）を削除しますか？\n※順位は自動で詰められます")) {
                records = records.filter(r => r.id !== id);
                // 順位の再計算
                records.forEach((r, index) => {
                    r.rank = index + 1;
                });
                saveAndRender();
            }
        }

        // 保存と描画
        function saveAndRender() {
            localStorage.setItem('simple_run_records', JSON.stringify(records));
            renderTable();
        }

        function renderTable() {
            recordsBody.innerHTML = "";
            if (records.length === 0) {
                emptyMsg.style.display = "block";
            } else {
                emptyMsg.style.display = "none";
                // 最新が上に来るように逆順で表示したい場合は .slice().reverse() する
                // 今回は持久走（順位）なので、1位から順に表示（そのまま）
                records.forEach(r => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td class="rank-col">${r.rank}</td>
                        <td class="time-col">${r.timeStr}</td>
                        <td class="action-col">
                            <button class="del-btn" onclick="deleteRecord(${r.id})">削除</button>
                        </td>
                    `;
                    recordsBody.appendChild(tr);
                });
            }
        }

        // クリップボードへコピー
        function copyToClipboard() {
            if (records.length === 0) {
                alert("データがありません");
                return;
            }

            let text = "順位\tタイム\n";
            records.forEach(r => {
                text += `${r.rank}\t${r.timeStr}\n`;
            });

            navigator.clipboard.writeText(text).then(() => {
                alert("コピーしました！\nスプレッドシートに貼り付けてください。");
            }).catch(err => {
                alert("コピー失敗: " + err);
            });
        }
    </script>
</body>
</html>
